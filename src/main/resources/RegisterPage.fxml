<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.workspace.controllers.RegisterController"
      styleClass="desktop-auth-root">

    <VBox alignment="CENTER" spacing="50" styleClass="auth-left-panel" HBox.hgrow="ALWAYS">
        <VBox alignment="CENTER" spacing="20">
            <Label text="TaskMaster" styleClass="auth-brand-title-large"/>
            <Label text="Start Managing Like a Pro" styleClass="auth-brand-subtitle-large"/>
        </VBox>

        <VBox alignment="CENTER_LEFT" spacing="20" style="-fx-max-width: 450px;">
            <VBox spacing="8">
                <Label text="Free Forever" styleClass="auth-feature-title-clean"/>
                <Label text="All features included with no hidden costs or limitations" styleClass="auth-feature-desc-clean"/>
            </VBox>

            <VBox spacing="8">
                <Label text="Unlimited Tasks" styleClass="auth-feature-title-clean"/>
                <Label text="Create and manage as many tasks as you need" styleClass="auth-feature-desc-clean"/>
            </VBox>

            <VBox spacing="8">
                <Label text="Team Features" styleClass="auth-feature-title-clean"/>
                <Label text="Collaborate and share tasks with your team members" styleClass="auth-feature-desc-clean"/>
            </VBox>

            <VBox spacing="8">
                <Label text="Advanced Analytics" styleClass="auth-feature-title-clean"/>
                <Label text="Get detailed insights into your productivity patterns" styleClass="auth-feature-desc-clean"/>
            </VBox>
        </VBox>
    </VBox>

    <VBox alignment="CENTER" spacing="30" styleClass="auth-right-panel" HBox.hgrow="ALWAYS">
        <padding>
            <Insets top="60" right="90" bottom="60" left="90"/>
        </padding>

        <VBox alignment="CENTER_LEFT" spacing="12">
            <Label text="Create Account" styleClass="auth-form-title"/>
            <Label text="Get started with TaskMaster today" styleClass="auth-form-subtitle"/>
        </VBox>

        <VBox spacing="22" VBox.vgrow="ALWAYS" style="-fx-min-width: 500px;">
            <VBox spacing="10">
                <Label text="Username" styleClass="desktop-field-label"/>
                <TextField fx:id="usernameField"
                           promptText="Choose a unique username"
                           prefHeight="55"
                           styleClass="desktop-text-field"/>
            </VBox>

            <VBox spacing="10">
                <Label text="Email Address" styleClass="desktop-field-label"/>
                <TextField fx:id="emailField"
                           promptText="your@email.com"
                           prefHeight="55"
                           styleClass="desktop-text-field"/>
            </VBox>

            <VBox spacing="10">
                <Label text="Password" styleClass="desktop-field-label"/>
                <PasswordField fx:id="passwordField"
                               promptText="Create a strong password (min 6 chars)"
                               prefHeight="55"
                               styleClass="desktop-text-field"/>
            </VBox>

            <VBox spacing="10">
                <Label text="Confirm Password" styleClass="desktop-field-label"/>
                <PasswordField fx:id="confirmPasswordField"
                               promptText="Re-enter your password"
                               prefHeight="55"
                               styleClass="desktop-text-field"/>
            </VBox>

            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 8 0 0 0;">
                <CheckBox text="I agree to the Terms and Privacy Policy" styleClass="auth-checkbox"/>
            </HBox>
        </VBox>

        <VBox spacing="25">
            <Button text="Create Account"
                    onAction="#onRegister"
                    styleClass="desktop-btn-primary"
                    prefWidth="Infinity"
                    prefHeight="58"
                    style="-fx-font-size: 17px;"/>

            <Separator style="-fx-background-color: #30363d;"/>

            <HBox spacing="10" alignment="CENTER">
                <Label text="Already have an account?" styleClass="desktop-helper-text"/>
                <Button text="Sign in"
                        onAction="#onLogin"
                        styleClass="desktop-btn-link"
                        style="-fx-font-size: 15px; -fx-font-weight: 700;"/>
            </HBox>
        </VBox>

        <Button text="Back"
                onAction="#onBack"
                styleClass="desktop-btn-ghost"
                prefHeight="42"/>
    </VBox>

</HBox>
